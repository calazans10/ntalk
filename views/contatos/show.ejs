<% layout('../default') -%>

<% include header %>

<section class="row-fluid text-center">
  <form action="/contato/<%- id %>" method="post" class="well form-inline">
    <input type="hidden" name="_method" value="delete">
    <label>Nome:</label>
    <span class="input-medium uneditable-input"><%- contato.nome %></span>
    <label>E-mail:</label>
    <span class="input-medium uneditable-input"><%- contato.email %></span>
    <a href="/contato/<%- id %>/editar" class="btn btn-info">Editar</a>
    <button type="submit" class="btn btn-danger">Excluir</button>
  </form>
</section>

<% include ../exit %>
