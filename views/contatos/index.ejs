<% layout('../default') -%>

<% include header %>

<section class="row-fluid">
  <section class="span12">
    <form action="/contato" method="post">
      <input type="text" name="contato[nome]" placeholder="Nome">
      <input type="email" name="contato[email]" placeholder="E-mail">
      <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
    <table class="table well">
      <thead>
        <tr>
          <th>Nome</th>
          <th>E-mail</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        <% contatos.forEach(function(contato, index) { %>
          <tr>
            <td><%- contato.nome %></td>
            <td><%- contato.email %></td>
            <td><a href="/contato/<%- index %>" class="btn btn-info">Detalhes</a></td>
          </tr>
        <% })%>
      </tbody>
    </table>
  </section>
</section>

<% include ../exit %>
